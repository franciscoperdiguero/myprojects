<Page x:Class="Twoo.Twoo_Start_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Twoo"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Twoo_Start_Page">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>        
        <Label Name="status_Label" Grid.Row="0" Foreground="blue" Content="--" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <WebBrowser Name="Main_Web" Grid.Row="1"/>
        <!--<DockPanel Grid.Row="1">
            <wv2:WebView2 Name="Main_Web" Source="https://www.google.com"/>
        </DockPanel>-->
        
        <Label Name="button_start_stop" Grid.Row="2" Content="Start" Background="Green" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Page>
